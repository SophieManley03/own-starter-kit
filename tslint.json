{
  "extends": ["tslint-immutable"],
  "rules": {
    "align": [true, "elements", "members", "parameters", "statements"],
    "arrow-parens": false,
    "comment-format": false,
    "completed-docs": false,
    "interface-name": false,
    "max-line-length": [true, 120],
    "newline-before-return": false,
    "newline-per-chained-call": false,
    "no-default-export": false,
    "no-implicit-dependencies": false,
    "no-import-side-effect": [true, { "ignore-module": "\\.css$" }],
    "no-inferrable-types": false,
    "no-let": [true, "ignore-local"],
    "no-magic-numbers": false,
    "no-object-mutation": true,
    "no-submodule-imports": false,
    "no-unused-variable": false,
    "no-unsafe-any": false,
    "no-use-before-declare": false,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "only-arrow-functions": false,
    "prefer-method-signature": false,
    "quotemark": [true, "avoid-escape", "jsx-double", "single"],
    "readonly-array": false,
    "readonly-keyword": true,
    "semicolon": [true, "never"],
    "ordered-imports": false,
    "member-ordering": false,
    "strict-boolean-expressions": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "arrays": "always",
          "functions": "always",
          "objects": "always",
          "typeLiterals": "never"
        },
        "singleline": "never"
      }
    ],
    "type-literal-delimiter": false,
    "promise-function-async": false,
    "typedef": [true, "call-signature", "member-variable-declaration", "parameter", "property-declaration"],
    "variable-name": false
  }
}