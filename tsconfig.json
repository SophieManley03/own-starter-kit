{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [ "./src/*" ]
    },
  },
  "include": [
    "typings/*.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
} 